require 'rails_helper'
require 'capybara/rspec'

RSpec.describe 'Transactions page', type: :feature do
  before(:each) do
    @category = Category.create(name: 'Books', icon: 'book_icon')
    @transaction1 = @category.exchanges.create(name: 'Transaction 1', amount: 10)
    @transaction2 = @category.exchanges.create(name: 'Transaction 2', amount: 20)

    visit category_path(@category)
  end

  it 'displays category information and transactions' do
    expect(page).to have_css('.img-amount-container')

    within('.img-amount-container') do
      expect(page).to have_css('.category-image')
      expect(page).to have_content(@category.name)
      expect(page).to have_content("$#{@category.total_amount}")
    end

    expect(page).to have_css('#transactions')

    within('#transactions') do
      expect(page).to have_css('li', count: 2)

      expect(page).to have_content(@transaction1.name)
      expect(page).to have_content("$#{@transaction1.amount}")

      expect(page).to have_content(@transaction2.name)
      expect(page).to have_content("$#{@transaction2.amount}")
    end

    expect(page).to have_css('.add-new-a')

    within('.add-new-a') do
      expect(page).to have_button('Add a new Transaction')
      expect(page).to have_link(href: new_category_exchange_path(@category))
    end
  end
end